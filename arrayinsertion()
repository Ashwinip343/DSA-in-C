************************************************************************************************************************************
//insertion at any position
#include <stdio.h>
int* insertion(int* a,int size,int n){
    int ele,pos,q;
    printf("Enter the element:");
    scanf("%d",&ele);
    printf("Enter the position");
    scanf("%d",&pos);
    if(pos<=0||pos>size+1){
        printf("Invalid insertion");
    }
    else{
    for(int i=n-1;i>=pos-1;i--){
        a[i+1]=a[i];
    }
    a[pos-1]=ele;
    n++;
    return a;
    }
    
}
int main()
{
    int a[50],size,n;
    printf("Enter size:");
    scanf("%d",&size);
    printf("Enetr the number of elements you want to enter:");
    scanf("%d",&n);
    printf("Enter the elements of array:");
    for(int i=0;i<n;i++){
        scanf("%d",&a[i]);
    }
    insertion(a,size,n);
    for(int i=0;i<n;i++){
    printf("%d\t",a[i]);}
    return 0;
}
****************************************************************************************************************************************
//insertion at end
#include <stdio.h>
int* insert0(int* a,int size,int n){
    int ele;
    printf("Enter the element:");
    scanf("%d",&ele);
    if(size==0){
        a[0]=ele;
    }
    else{
    for(int i=n-1;i>=0;i--){
        a[i+1]=a[i];
    }
    a[0]=ele;
    n++;
    return a;
    }
    
}
int main()
{
    int a[50],size,n;
    printf("Enter size:");
    scanf("%d",&size);
    printf("Enetr the number of elements you want to enter:");
    scanf("%d",&n);
    printf("Enter the elements of array:");
    for(int i=0;i<n;i++){
        scanf("%d",&a[i]);
    }
    insert0(a,size,n);
    n++;
    for(int i=0;i<n;i++){
    printf("%d\t",a[i]);}
    return 0;
}
*********************************************************************************************
//insertion at end
#include <stdio.h>
int* insertend(int* a,int size,int n){
    int ele;
    printf("Enter the element:");
    scanf("%d",&ele);
    if(size==0){
        a[0]=ele;
    }
    else{
    a[n]=ele;
    n++;
    return a;
    }
    
}
int main()
{
    int a[50],size,n;
    printf("Enter size:");
    scanf("%d",&size);
    printf("Enetr the number of elements you want to enter:");
    scanf("%d",&n);
    printf("Enter the elements of array:");
    for(int i=0;i<n;i++){
        scanf("%d",&a[i]);
    }
    insertend(a,size,n);
    n++;
    for(int i=0;i<n;i++){
    printf("%d\t",a[i]);}
    return 0;
}

